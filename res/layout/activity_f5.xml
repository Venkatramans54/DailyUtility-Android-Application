<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
    <RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Bleeding, Cuts and Scrapes"
        android:textSize="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="25dp"
        android:textSize="20dp"
        android:layout_marginLeft="8dp"
        android:text="When dealing with bleeding wound, Priority #1 is to stop the bleeding.  Below are several rules to keep in mind:" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:textSize="20dp"
        android:text="2. In most cases, bleeding can be stopped by applying pressure to the wound" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:text="3. If the bleeding is not stopping, apply clean cloth or bandage to the wound for 15 to 30 minutes with reasonable amount of pressure. " />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="3dp"
        android:layout_below="@+id/textView2"
        android:textSize="20dp"
        android:text="1. Maintain composure, no need to panic" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="12dp"
        android:src="@drawable/bleed" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_alignTop="@+id/imageView1"
        android:layout_toRightOf="@+id/imageView1"
        android:text="Contact emergency services if the bleeding has not stopped or you suspect potential for infection or internal injuries (fractures, breaks, head injury, etc.)" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="18dp"
        android:textSize="20dp"
        android:text="First Aid Tips:" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="8dp"
        android:text="1. Involve the victim, if able, to apply pressure on the wound while you are putting on protective equipment or taking care of other wounds" />
    
    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="2dp"
        android:textSize="20dp"
        android:text="2. Stop the bleeding by applying pressure to the wound with dressing" />
    
	<TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="2dp"
        android:text="3. If not effective, apply second dressing and attempt to increase the pressure on the wound" />
    
	<TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:textSize="20dp"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="20dp"
        android:text="4. Contact emergency services, unless the wound is minor or you are confident there is no need for further intervention" />
	
</RelativeLayout>

</ScrollView>